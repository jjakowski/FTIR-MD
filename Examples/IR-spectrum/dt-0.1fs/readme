


# extract all  velcoties 
 cat   ./movie.xyz   |  cut -b1- |   awk '{if (NF==8) printf("%s \n",$0)}'| cut -b70-   > tmp


#-- now   calcualte  ACF
    Nat=5   # methane (CH4)   # Make sure to set the right number of atoms in "octave-autocorr.inp"
    octave  <  octave-autocorr.inp >  octave-autocorr.out
    dt=0.1 
    cat octave-autocorr.out | sed -n "/ACF/,$ p" | grep -v "#" | awk -v dt=$dt '{au2fs=0.02418884326505; time=(NR-1)*dt/au2fs; if(NF!=0) printf(" %20.10f   %s  \n",time, $1 )}' | tail -n +1 > acf.dat

#-- now FFT of ACF
    octave   ./octave-fft1d.m       acf.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w.dat
    octave   ./octave-fft1d.m-damp  acf.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w2.dat

