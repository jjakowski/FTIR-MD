


# extract all  velcoties 
    cat   ./movie.xyz                 |  cut -b1- |   awk '{if (NF==8) printf("%s \n",$0)}'| cut -b70-   > tmp-dt-0.5fs
    cat   ./movie-dt-0.1fs.xyz        |  cut -b1- |   awk '{if (NF==8) printf("%s \n",$0)}'| cut -b70-   > tmp-dt-0.1fs
    cat   ./movie-NoseH-dt-0.1fs.xyz  |  cut -b1- |   awk '{if (NF==8) printf("%s \n",$0)}'| cut -b70-   > tmp-NoseH-dt-0.1fs


#-- now   calcualte  ACF
    Nat=6   # methane (CH4)   # Make sure to set the right number of atoms in "octave-autocorr.inp"

    dt=0.5 
    cp  tmp-dt-0.5fs tmp 
    octave  <  octave-autocorr.inp >  octave-autocorr-dt-0.5fs.out
    cat octave-autocorr-dt-0.5fs.out | sed -n "/ACF/,$ p" | grep -v "#" | awk -v dt=$dt '{au2fs=0.02418884326505; time=(NR-1)*dt/au2fs; if(NF!=0) printf(" %20.10f   %s  \n",time, $1 )}' | tail -n +1 > acf-0.5fs.dat



    dt=0.1 
    cp  tmp-dt-0.1fs tmp 
    octave  <  octave-autocorr.inp >  octave-autocorr-dt-0.1fs.out
    cat octave-autocorr-dt-0.1fs.out | sed -n "/ACF/,$ p" | grep -v "#" | awk -v dt=$dt '{au2fs=0.02418884326505; time=(NR-1)*dt/au2fs; if(NF!=0) printf(" %20.10f   %s  \n",time, $1 )}' | tail -n +1 > acf-0.1fs.dat


    dt=0.1 
    cp tmp-NoseH-dt-0.1fs  tmp 
    octave  <  octave-autocorr.inp >  octave-autocorr-NoseH-dt-0.1fs.out
    cat octave-autocorr-NoseH-dt-0.1fs.out | sed -n "/ACF/,$ p" | grep -v "#" | awk -v dt=$dt '{au2fs=0.02418884326505; time=(NR-1)*dt/au2fs; if(NF!=0) printf(" %20.10f   %s  \n",time, $1 )}' | tail -n +1 > acf-NoseH-0.1fs.dat




#-- now FFT of ACF
    octave   ./octave-fft1d.m       acf-0.5fs.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w-dt0.5fs.dat
    octave   ./octave-fft1d.m-damp  acf-0.5fs.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w2-dt0.5fs.dat

    octave   ./octave-fft1d.m       acf-0.1fs.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w-dt0.1fs.dat
    octave   ./octave-fft1d.m-damp  acf-0.1fs.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w2-dt0.1fs.dat

    octave   ./octave-fft1d.m       acf-NoseH-0.1fs.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w-NoseH-dt0.1fs.dat
    octave   ./octave-fft1d.m-damp  acf-NoseH-0.1fs.dat  |tail -n+1 |sed -n "/period =/,$ p"  > w2-NoseH-dt0.1fs.dat

